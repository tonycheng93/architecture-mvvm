<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView android:id="@+id/tv_content"
              android:layout_marginStart="@dimen/margin_16"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              tools:text="Android is the best!"
              android:layout_marginTop="@dimen/margin_16"
              android:gravity="center_vertical|start"
              android:textSize="@dimen/text_size_14"
              android:textColor="@color/color_deffffff"
              app:layout_constraintBottom_toTopOf="@+id/tv_author"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

    <TextView
            android:text="@string/text_author"
            android:id="@+id/tv_author"
            tools:text="Jack Mary"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginStart="@dimen/margin_16"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintTop_toBottomOf="@id/tv_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="@dimen/margin_16"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_date"
            tools:text="2017-03-16"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_content"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_de4a4a4a"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/margin_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>